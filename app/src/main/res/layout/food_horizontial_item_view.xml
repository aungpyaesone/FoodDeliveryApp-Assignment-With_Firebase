<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.padc.fooddeliveryapp.view.components.RoundedCornerImageView
        android:id="@+id/ivFood"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/margin_medium_2"
        android:elevation="@dimen/margin_small"
        android:src="@mipmap/ic_launcher"
        app:cornerRadius="@dimen/margin_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="@string/burgers"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_2"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ivFood"
        app:layout_constraintStart_toStartOf="@+id/ivFood"
        app:layout_constraintTop_toBottomOf="@+id/ivFood" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/_16"
        android:textColor="@color/black"
        android:textSize="@dimen/text_regular_2"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />
</androidx.constraintlayout.widget.ConstraintLayout>